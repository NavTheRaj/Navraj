*Author :Navraj Khanal
  Program:Program to print a number positive or negative by using ternary operator.
  Date   :1/3/2018  */
  #include<stdio.h>
  #include<conio.h>
  int main()
  {
   int n;
   printf("Enter the number\n");
   scanf("%d",&n);
   (n<0)?printf("The number is negative."):printf("The number is positive.");
   getch();
  }
