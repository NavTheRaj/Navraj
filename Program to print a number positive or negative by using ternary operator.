*Author :Navraj Khanal
  Program:Program to print a number positive or negative by using ternary operator.
  Date   :1/3/2018  */
  #include<stdio.h>
  #include<conio.h>
  int main()
  {
   int a,b,c;
   printf("Enter the numbers\n");
   scanf("%d%d%d",&a,&b,&c);
   (a>b && a>c)?printf("%d is largest.",a):(b>a && b>c)?printf("%d is largest.",b):printf("%d is largest",c);
   getch();
  }
