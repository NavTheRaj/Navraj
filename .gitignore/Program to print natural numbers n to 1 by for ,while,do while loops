  Program:Program to print natural numbers n to 1 by for ,while,do while loops
  Date   :1/8/2018  */
#include<stdio.h>
#include<conio.h>
int main()
{
    int n,a,b,c,i;
    printf("1)USE FOR LOOP\n");
    printf("2)USE WHILE LOOP\n");
    printf("3)USE DO WHILE LOOP\n");
    printf("Enter your choice\n");
    scanf("%d",&n);
    switch(n)
    {
case 1:printf("Enter the limit\n");
       scanf("%d",&a);
    for (i=1;i<=a;i++)
    {
    printf("%d",i);
    }
    break;

    case 2:printf("Enter the limit\n");
    scanf("%d",&b);
    i=1;
    while(i<=b)
    {
        printf("%d\n",i);
        i++;
    }
    break;
    case 3:printf("Enter the limit\n");
    scanf("%d",&c);
    i=1;
    do
    {
        printf("%d\n",i);
        i++;
       } while(i<=c);

         break;
        default:printf("INVALID CHOICE");

}
    getch();
    return(0);
}
